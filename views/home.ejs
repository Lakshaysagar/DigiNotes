
<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>DigiNotes is a website which lets you make Digital Notes which you can use it anytime and anywhere!</p>
    
  <%  posts.forEach(function(post){ %>

    <div class="note">
      <h2><%=post.title%></h2>
    <p>
    <%=post.content.substring(0, 150) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>
    </div>

    <% }) %>


